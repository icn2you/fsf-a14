<!-- Header -->
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#"><i class="far fa-newspaper"></i>&nbsp;News Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbar-links" class="collapse navbar-collapse justify-content-end uppercase">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Saved Articles</a>
        </li>
        <li class="nav-item">
          <a id="scrape" class="nav-link" href="/scrape">Scrape New Articles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Clear Articles</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4 mt-3 uppercase">Latest Headlines</h1>
      <p class="lead"><span class="uppercase">Democracy Now!</span> Edition</p>
    </div>
  </div>
